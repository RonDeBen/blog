  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Unity WebGL Player | Come Out 6
    %link{:href => (asset_path "TemplateData/style.css"), :rel => "stylesheet"}/
    %link{:href => (asset_path "TemplateData/favicon.ico"), :rel => "shortcut icon"}/
    %script{:src => (asset_path "TemplateData/UnityProgress.js")}
  %body.template
    %p.header
      %span> Unity WebGL Player |
      Come Out 6
